<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title || 'BePlantee - Plant Management' %></title>
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    
    <link rel="stylesheet" href="/css/main.css">
    <% if (typeof additionalCSS !== 'undefined') { %>
        <% additionalCSS.forEach(function(css) { %>
            <link rel="stylesheet" href="/css/<%= css %>">
        <% }); %>
    <% } %>
    
    <link rel="icon" type="image/x-icon" href="/images/favicon.ico">
</head>
<body class="<%= typeof bodyClass !== 'undefined' ? bodyClass : '' %>">
    
    <% if (typeof showHeader === 'undefined' || showHeader) { %>
        <%- include('../partials/header') %>
    <% } %>
    
    <main class="main-content">
        <%- body %>
    </main>
    
    <% if (typeof showFooter === 'undefined' || showFooter) { %>
        <%- include('../partials/footer') %>
    <% } %>
    
    <script src="/js/main.js"></script>
    <% if (typeof additionalJS !== 'undefined') { %>
        <% additionalJS.forEach(function(js) { %>
            <script src="/js/<%= js %>"></script>
        <% }); %>
    <% } %>
</body>
</html>